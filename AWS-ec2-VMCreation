pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        AWS_ACCESS_KEY_ID = credentials('aws-access-key')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/RameshkumarBaskaran/terraform-zero-to-hero'
            }
        }

        stage('Init Terraform') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Plan VM Creation') {
            steps {
                sh 'terraform plan -out=tfplan'
            }
        }

        stage('Apply VM Creation') {
            steps {
                input message: 'Proceed with VM creation?'
                sh 'terraform apply -auto-approve tfplan'
            }
        }
    }

    post {
        success {
            echo 'VM created successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
